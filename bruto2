let produtos = document.querySelector('#Opções')
let botao = document.querySelector('#compre')

botao.addEventListener('click', compreagora)
function compreagora(){
    let compra = "Produto comprado\n"
    if (produtos.value == "X-Salada"){
        compra += "Produto: " + produtos.value + ", valor: R$15,00"
    }else if (produtos.value == "X-Burguer"){
        compra += "Produto: " + produtos.value + ", valor: R$16,00"
    }else if (produtos.value == "X-Bacon"){
        compra += "Produto: " + produtos.value + ", valor: R$18,00"
    } else {
        compra += "produto não selecionado"
    }
     alert(compra)   
}
